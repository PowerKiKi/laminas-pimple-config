{
    "name": "webimpress/laminas-pimple-config",
    "description": "PSR-11 Pimple container configurator for Laminas applications",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "pimple",
        "container",
        "psr-11"
    ],
    "homepage": "https://laminas.dev",
    "support": {
        "docs": "https://docs.laminas.dev/laminas-pimple-config/",
        "issues": "https://github.com/laminas/laminas-pimple-config/issues",
        "source": "https://github.com/laminas/laminas-pimple-config",
        "rss": "https://github.com/laminas/laminas-pimple-config/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "pimple/pimple": "^3.2.2"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "phpunit/phpunit": "^5.7.22 || ^6.3.1"
    },
    "autoload": {
        "psr-4": {
            "Laminas\\Pimple\\Config\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\Pimple\\Config\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    },
    "replace": {
        "webimpress/zend-pimple-config": "self.version"
    }
}
