{
    "name": "zendframework/zend-pimple-config",
    "description": "PSR-11 Pimple container configurator for ZF and Expressive applications",
    "license": "BSD-3-Clause",
    "keywords": [
        "expressive",
        "zf",
        "zendframework",
        "pimple",
        "container",
        "psr-11"
    ],
    "support": {
        "issues": "https://github.com/zendframework/zend-pimple-config/issues",
        "source": "https://github.com/zendframework/zend-pimple-config",
        "rss": "https://github.com/zendframework/zend-pimple-config/releases.atom",
        "slack": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/expressive"
    },
    "require": {
        "php": "^7.1",
        "pimple/pimple": "^3.2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0.2",
        "zendframework/zend-coding-standard": "~1.0.0",
        "zendframework/zend-container-config-test": "dev-improvements"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/weierophinney/zend-container-config-test"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zend\\Pimple\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Pimple\\Config\\": "test"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-develop": "1.1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
